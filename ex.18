programa {
	funcao inicio() {
		inteiro numeroSecreto = 77
		inteiro palpite = 0 
		
		escreva("Tente adivinhar o número secreto (entre 1 e 100).\n")
		

		enquanto(palpite != numeroSecreto){
			escreva("\nDigite seu palpite: ")
			leia(palpite)
			
			se (palpite < numeroSecreto) {
				escreva("O número secreto é **mais alto** que ", palpite, ".\n")
			} senao se (palpite > numeroSecreto) {
				escreva("O número secreto é **mais baixo** que ", palpite, ".\n")
			}
			
		}
		
		escreva("\n--- PARABÉNS! ---\n")
		escreva("Você acertou! O número secreto é realmente ", numeroSecreto, ".\n")
	}
}
